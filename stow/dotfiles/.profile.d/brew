# path where homebrew is installed, usually /usr/local
brew=$(brew --prefix)

# man pages from homebrew
export MANPATH=$brew/share/man:$MANPATH

# use zsh completions from brew
export FPATH=$brew/share/zsh-completions:$FPATH

# prefer gnu coreutils for consistency
export PATH=$brew/opt/coreutils/libexec/gnubin:$PATH
export MANPATH=$brew/opt/coreutils/libexec/gnuman:$MANPATH

# ... and same for gnu sed
export PATH=$brew/opt/gnu-sed/libexec/gnubin:$PATH
export MANPATH=$brew/opt/gnu-sed/libexec/gnuman:$MANPATH

# unversioned symlinks for python tools
export PATH=$brew/opt/python/libexec/bin:$PATH

# tell compilers where to find openssl
export LDFLAGS="-L/usr/local/opt/openssl/lib"
export CPPFLAGS="-I/usr/local/opt/openssl/include"
export PKG_CONFIG_PATH="/usr/local/opt/openssl/lib/pkgconfig"

# vi:ft=sh
