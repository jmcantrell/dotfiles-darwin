#!/usr/bin/env bash

# Opens the current (or given) directory in finder.

set -eu

path=$1

if [[ ! -e $path ]]; then
    path=$PWD
fi

osascript <<-EOF
set thePath to POSIX file "$path" as alias
tell application "Finder"
	activate
	try
		set the folder of the front window to thePath
	on error
		open thePath
	end try
end tell
EOF
