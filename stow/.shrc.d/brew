[[ -d $BREW_PREFIX ]] || return 0

export MANPATH=$BREW_PREFIX/share/man:$MANPATH

# Prefer gnu coreutils.
export PATH=$BREW_PREFIX/opt/coreutils/libexec/gnubin:$PATH
export MANPATH=$BREW_PREFIX/opt/coreutils/libexec/gnuman:$MANPATH

# Prefer gnu sed.
export PATH=$BREW_PREFIX/opt/gnu-sed/libexec/gnubin:$PATH
export MANPATH=$BREW_PREFIX/opt/gnu-sed/libexec/gnuman:$MANPATH

# Unversioned symlinks for python tools.
export PATH=$BREW_PREFIX/opt/python/libexec/bin:$PATH

# Tell compilers where to find openssl.
export LDFLAGS="-L$BREW_PREFIX/opt/openssl/lib"
export CPPFLAGS="-I$BREW_PREFIX/opt/openssl/include"
export PKG_CONFIG_PATH="$BREW_PREFIX/opt/openssl/lib/pkgconfig"

# vi:ft=sh
